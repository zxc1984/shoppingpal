extends layout

block body
  div.sidetap
    div.stp-nav
      div
        .nav-header test
        nav
          a.selected(href="view1",data-header-text="Shopping") 
            i.icon-shopping-cart 
            | &nbsp;&nbsp;Shopping
          a(href="view2",data-header-text="Lists") 
            i.icon-book 
            | &nbsp;&nbsp;List
          a(href="view2",data-header-text="Expenditure") 
            i.icon-money 
            | &nbsp;&nbsp;Expenditure
        .nav-header test2
        nav
          a(href="view1") View 1
          a(href="view2") View 2

    div.stp-content#content
      header.stp-fake.header
      div.stp-overlay.nav-toggle
      div.stp-content-panel
        header
          a.header-button.icon.menu(href="javascript:void(0)")
            span Menu
          h1#header Header Text

        div.stp-content-frame
          div.stp-content-body
            div(ng-view)
      #push

  #footer
    | Angular seed app: v
    span(app-version)

  script(src='js/bootstrap.min.js')
  script(src='js/zepto.min.js')
  script(src='js/sidetap.min.js')
  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/less-1.3.3.min.js')
  script
    var st = sidetap();
    $(".header-button.menu").on("click",st.toggle_nav);
    $(".stp-nav div nav a").on("click",test);
    function test() {
      var self = this;
      $(".stp-nav div nav a").removeClass("selected");
      $(self).addClass("selected");
      var headerText = $(self).attr('data-header-text');
      $("#header").text(headerText);
      st.toggle_nav();
    }