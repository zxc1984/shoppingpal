extends layout

block body
  div.sidetap
    div.stp-nav
      div
        .nav-header Shopping Pal
        nav
          a.selected(href="list") 
            i.icon-book 
            span List
          a(href="shopping") 
            i.icon-shopping-cart 
            span Consolidated List
          a(href="expense") 
            i.icon-money 
            span Expenditure
        .nav-header Perference
        nav
          a(href="javascript:void(0)") 
            i.icon-cogs
            span Settings
          a(href="javascript:void(0)") 
            i.icon-info-sign
            span About Us
    div.loading-overlay(ng-show="loading")
      i.icon-refresh.icon-spin.icon-2x
      span.loading-text Loading...
    div.stp-content#content
      header.stp-fake.header
      div.stp-overlay.nav-toggle
      div.stp-content-panel
        div(ng-view)

  script(src='js/bootstrap.min.js')
  script(src='js/zepto.min.js')
  script(src='js/sidetap.min.js')
  script(src='js/lib/angular/angular.js')
  script(src='js/angular-strap.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/less-1.3.3.min.js')
  script
    $(".stp-nav div nav a").on("click",menuClick);
    function menuClick() {
      var self = this;
      $(".stp-nav div nav a").removeClass("selected");
      $(self).addClass("selected");
      st.toggle_nav();
    }