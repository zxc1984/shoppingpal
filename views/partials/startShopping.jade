header
	a.header-button.icon(href="javascript:void(0)")(ng-click="backToList()")
			div back
	h1#header Start Shopping
	div.header-menu-bar.right
		a.header-menu-button.icon(href="javascript:void(0)")(ng-click="proceedToCheckout()")
			span
				i.icon-ok.icon-2x
div.stp-content-frame(ng-init="initListDetail()")
	div.stp-content-body
		include alertBox
		//-
			.row.non-list
				div.columns.six.mobile-four
					form
						.row
							div.mobile-four.twelve.columns.form-box

								div.input-append(style="width:90%;")
									input(type="text",name="friendemail",placeholder="Category/Item...",class="input-block-level firstBox",ng-model="friendemail",maxlength="25")
									button.btn(type="button",ng-click="friendemail = ''")
										i.icon-search
		div.row
			// My list of activities
			.twelve.columns.mobile-four
				div.listHeader
					| Cat 1
		div.row
			ul.block-grid.two-up.mobile
				li(ng-repeat="item in items")
					div.list-container
						div.row.list-name-box(ng-class="getSelectedItemClass(item)")
							div.mobile5-four.columns.eight.list-name
								div.item-title {{item.name}}
								div.item-desc2
									span.badge.badge-info.quantity {{item.qty}}
									span.uom.blue-text
										ng-pluralize(count="item.qty",when="{'one' : unitOfMeasure[item.unitOfMeasure].singular, 'other' : unitOfMeasure[item.unitOfMeasure].plural}")
									span.status.label
										i.icon-group
							div.fgAction
								div.action
									div(ng-hide="itemIsSelected(item)",ng-click="toggleSelectItem(item)") 
										i.icon-ok.icon-2x
										div.small Got it
									div(ng-show="itemIsSelected(item)",ng-click="toggleSelectItem(item)")
										i.icon-undo.icon-2x
										div.small Undo


