header
	a.header-button.icon(href="/list/create")
		div back
	h1#header Add Friends
	a.header-button.icon.right(href="/list/")
		div create
div.stp-content-frame
	div.stp-content-body
		.row.non-list
			div.columns.six.mobile-four
				form
					label Please provide friends email
					.row
						div.mobile-four.twelve.columns
							div.input-append(style="width:90%;")
								input(type="text",name="friendemail",placeholder="Type list name here...",class="input-block-level firstBox",ng-model="friendemail",maxlength="25")
								button.btn(type="button",ng-click="friendemail = ''")
									i.icon-remove
		.row
			.column.twelve.mobile-four
				| cat bar
		div.row
			ul.block-grid.two-up.mobile
				li(ng-repeat="friend in friends | orderBy:['status','email']")
					div.list-container
						div.row
							div.mobile-three.columns.six.list-name
								div.email-title {{friend.email}}
							div.mobile-one.columns.six.nopad.right.text-right
								span.email-desc
									span.label(ng-class="getStatusClass(friend.status)")
										span {{friend.status}}
								span.remove
									i.icon-remove
