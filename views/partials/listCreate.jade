header
	a.header-button.icon(href="/list")
		div back
	h1#header New List
	a.header-button.icon.right(href="/list/addFriends")
		div next
div.stp-content-frame
	div.stp-content-body(ng-init="initNewList()")
		form
			.row.non-list
				div.columns.six.mobile-four
					label Please provide list name
					.row
						div.mobile-four.twelve.columns
							div.text-count
								span.right(ng-bind="textCountLeft(newlist.name.length,25)")
							div.input-append(style="width:90%;")
								input(type="text",name="listname",placeholder="Type list name here...",class="input-block-level firstBox",ng-model="newlist.name",maxlength="25")
								button.btn(type="button",ng-click="newlist.name = ''")
									i.icon-remove