header
	a.header-button.icon(href="/shopping/trips")
		div Back
		span Menu
	h1#header My Trips

iv.stp-content-frame
	div.stp-content-body
		include alertBox
		div.row
			.six.columns.mobile-two(style="padding:10px")
				span(style="vertical-align: middle")
					center
						a.btn.btn-success.btn-block.disabled
							i.icon-user
								|  MY TRIPS
			.six.columns.mobile-two(style="padding:10px")
				span(style="vertical-align: middle")
					center
						a.btn.btn-primary.btn-block(href="/shopping/friends")
							i.icon-group
								|  FRIEND'S TRIPS
		div.row
			.twelve.columns.mobile-four
				div.listHeader
					| All Trips Made:
		div.row
			ul.block-grid.two-up.mobile
				li(ng-repeat="trip in trips | filter:myTrips")
					div.list-container.selectable
						div.row.expense-row
							div.mobile5-four.columns.eight
								h5
									| &nbsp;{{trip.name}} 
									small
										| spent ${{trip.amount}} at {{trip.Location}}
							div.mobile5-one.columns.four
								.pay-actions
									h6
										small
											| {{trip.date}}

