div.loading(ng-show="loading")
	i.icon-refresh.icon-spin.icon-large
	span.loading-text Loading...
div.row.alert-box(ng-show="alert.show",diFadeInOut)
	div.columns.twelve.mobile-four.text-center
		.alert(ng-class="alert.className")
			button.close(type="button",data-dismiss="alert",ng-click="closeAlert()")
				| &times;
			| {{alert.msg}}