header
	a.header-button.icon(href="/list/1/additem")
			div back
	h1#header Add Item
	div.header-menu-bar.right
		a.header-menu-button.icon(href="/list/1/additem")
			span
				i.icon-ok.icon-2x
div.stp-content-frame
	div.stp-content-body
		include alertBox
		form
			.row.non-list
				div.columns.six.mobile-four
					input(type="text",name="itemname",placeholder="Item name",value="{{item.name}}",class="input-block-level")

					div.input-prepend
						span.add-on $
						input(type="text",placeholder="5.00",maxlength="25")
					
					textarea(name="itemdesc",placeholder="Description",value="Brand XXX Super Powderful Detergent.",class="input-block-level",rows="3")
					select.select-block-level
						option(ng-repeat="uom in unitOfMeasure", value="{{$index}}") {{uom.singular}}


					div.btn-group(ng-model="radioValue", bs-buttons-radio)
						button(type="button", class="btn", value="left", ng-class="classShareType(item.shareType)",ng-click="toggleShareType(item,'individual')") Individual
						button(type="button", class="btn", value="middle", ng-class="classShareType(item.shareType)",ng-click="toggleShareType(item,'shared')") Shared

					span.btn.btn-primary.btn-block add item


