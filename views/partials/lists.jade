header
	a.header-button.icon.menu(href="javascript:void(0)",ng-click="menuClick()")
		span Menu
	h1#header Lists
	div.header-menu-bar.right
		a.header-menu-button.icon(href="/list/create")
			span
				i.icon-plus.icon-2x
div.stp-content-frame
	div.stp-content-body
		div.row
			div.columns.twelve
				ul.block-grid.two-up.mobile
					li(ng-repeat="list in lists")
						div.list-container(ng-click="ListDetails()")
							div.row
								div.left.list-name
									div.list-title {{list.name}}
								div.right
									div.list-desc
										span.label-header Items
										span.label.label-info
											span 0 
											i.icon-tags
									div.list-desc
										span.label-header Friends
										span.label
											span 0 
											i.icon-group
					li.span12(ng-show="noList()")
						div
							| Start by creating your list now!
